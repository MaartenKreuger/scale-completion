_mmaddnode_completion()
{
  COMPREPLY=()
  case "${#COMP_WORDS[@]}" in
     *) case "${COMP_WORDS[COMP_CWORD-1]}" in
          -N) COMPREPLY=($(compgen -f -o filenames -W "$(_nodes)" -- "${COMP_WORDS[COMP_CWORD]}"));;
          *) COMPREPLY=($(compgen -W '-N --accept' -- "${COMP_WORDS[COMP_CWORD]}"));;
       esac;;    
  esac
}
complete -F _mmaddnode_completion mmaddnode
